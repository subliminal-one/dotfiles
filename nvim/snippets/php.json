{
  "bhive-test ...": {
    "prefix": "bhive_test",
    "body": [
      "<?php",
      "namespace Test\\\\${1:Namespace};",
      "",
      "use Test\\AbstractTest;",
      "use ${1}\\\\${2:ServiceClass};",
      "",
      "/**",
      " * Tests for $2.",
      " */",
      "class ${2}Test extends AbstractTest",
      "{",
      "    const SERVICE_NAME = '${3:ServiceName}';",
      "    const SERVICE_CLASS = ${2}::class;",
      "",
      "    /**",
      "     * Run after ever test.",
      "     */",
      "    public function tearDown()",
      "    {",
      "        \\$this->dropTempTables();",
      "    }",
      "",
      "    /**",
      "     * Test service construction.",
      "     */",
      "    public function testService()",
      "    {",
      "        \\$this->assertInstanceOf(self::SERVICE_CLASS, \\$this->getService());",
      "    }",
      "",
      "    public function test${4:FirstTest}()",
      "    {",
      "        \\$service = \\$this->getService();",
      "        $0",
      "    }",
      "}"
    ],
    "description": "BHive Unit Test"
  }
}
